{
  "name": "draftengine",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:check": "node server/scripts/check-db.js",
    "tags:backfill-legacy": "node server/scripts/backfill-legacy-tags.js",
    "tags:clear-legacy-metadata": "node server/scripts/clear-legacy-metadata-tags.js",
    "catalog:refresh": "node server/scripts/generate-full-champions-csv.js",
    "migrate:down": "node-pg-migrate down --migrations-dir server/migrations",
    "migrate:up": "node-pg-migrate up --migrations-dir server/migrations",
    "seed:champions": "node server/scripts/seed-champions.js",
    "seed:fake-users": "node server/scripts/seed-fake-users.js",
    "start:api": "node server/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.1.0",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.19.0"
  }
}
